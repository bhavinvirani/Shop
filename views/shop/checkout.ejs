<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <ul class="cart__item-list">
                    <% products.forEach(prod=> { %>
                        <li class="cart__item">
                            <h1>
                                <%= prod.productId.title %>
                            </h1>
                            <h2>Quantity: <%= prod.quantity %>
                            </h2>
                        </li>
                        <% }) %>
                </ul>
                <div class="btn-centered">
                    <h2>Total: $<%= total %>
                    </h2>
                </div>
                <hr>
                <div class="btn-centered">
                    <button class="btn" id="order-btn">ORDER</button>
                    <script src="https://js.stripe.com/v3/"></script>
                    <script>
                        var stripe = Stripe('pk_test_51JCgotSI6GJA9axdNplJD2Hy0vQkg99bDcIRHodvHrWZfpdIRu2Mf7FbyAPBcICyi4T5kfFgFLxeLfQ9BIWYEqZ300D4x5KBho');
                        var orderBtn = document.getElementById("order-btn");
                        orderBtn.addEventListener("click", function() {
                            console.log('clicked');
                            stripe.redirectToCheckout({
                                sessionId: "<%= sessionId %>"
                            });
                        });
                    </script>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>